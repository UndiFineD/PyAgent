# =============================================================================
# PyAgent Configuration Template (.env.template)
# =============================================================================
# This is a template file showing all available configuration options for PyAgent.
# Copy this file to .env and modify the values for your specific setup.
# Uncomment and modify values as needed.

# -----------------------------------------------------------------------------
# GitHub Integration
# -----------------------------------------------------------------------------
# Path to GitHub Personal Access Token file (for GitHub API access)
# DV_GITHUB_TOKEN_FILE=c:\path\to\your\github-pat.txt
# GITHUB_TOKEN_FILE=c:\path\to\your\github-pat.txt

# GitHub Models API configuration (for external LLM access)
# GITHUB_MODELS_BASE_URL = "https://models.github.ai/inference/"
# GITHUB_MODELS_MODEL = "openai/gpt-4.1"

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Agent verbosity level: normal, debug, quiet
# DV_AGENT_VERBOSITY=normal

# -----------------------------------------------------------------------------
# LLM Backend Configuration
# -----------------------------------------------------------------------------
# Ollama local LLM server configuration
# DV_OLLAMA_BASE_URL=http://localhost:11434
# Available models: tinyllama, llama2, llama3, codellama, etc.
# DV_OLLAMA_MODEL='tinyllama'

# VLLM server configuration (if running local VLLM instance)
# DV_VLLM_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Backend Control
# -----------------------------------------------------------------------------
# Disable specific LLM backends (comma-separated list)
# Available backends: lmstudio, ollama, vllm, vllm_native, copilot_cli, github_models
# Example: DV_DISABLED_BACKENDS=lmstudio,copilot_cli
# DV_DISABLED_BACKENDS=lmstudio

# -----------------------------------------------------------------------------
# Legacy/Additional Configuration (uncomment if needed)
# -----------------------------------------------------------------------------
# PyAgent Maintenance System Credentials
# Fill these in to enable autonomous AI-driven code fixes
# YOUR_EMAIL="your_mail@example.com"

# PyAgent
# PYAGENTS_API_KEY=your_api_key_here
# PYAGENTS_ENDPOINT=https://api.pyagent.com/

# OpenAI
# OPENAI_API_KEY=your_key_here

# Azure OpenAI
# AZURE_OPENAI_API_KEY=your_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# GitHub Models (alternative configuration)
# GITHUB_TOKEN=your_token_here
