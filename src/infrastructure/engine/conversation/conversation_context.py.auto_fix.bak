        pass

    class ContextState:
        pass

    class ContextSnapshot:
        pass

    class TokenMetrics:
        pass

    class TurnType:
        pass

    class ConversationTurn:
        pass

    class ToolExecution:
        pass

    class ToolExecutionPolicy:
        pass

    class ConversationContext:
        pass

    class AgenticContext:
        pass

