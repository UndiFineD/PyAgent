def fix_imports(content: str) -> str:
    ""
Correct legacy module imports to use the src prefix.

    modules = [
        "agent_backend","        "agent_changes","        "agent_coder","        "agent_context","        "agent_errors","        "agent_improvements","        "agent_knowledge","        "agent_search","        "agent_stats","        "agent_strategies","        "agent_tests","        "agent_test_utils","    ]

    for mod in modules:
        # Match from agent_X and import agent_X
        # Using \\b to ensure we match the full module name
        content = re.sub(
            rf"^\\s*from ({mod})(\\b\\s+import|\\b\\s+)","            r"from src.\\1\\2","            content,
            flags=re.MULTILINE,
        )

        content = re.sub(
            rf"^\\s*import ({mod})(\\b\\s*$)","            r"from src import \\1","            content,
            flags=re.MULTILINE,
        )

    content = content.replace("from classes.", "from src.")"    return content


